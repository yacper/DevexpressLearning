<Window x:Class="NeoControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeoControls"
        xmlns:controls="clr-namespace:NeoTrader.UI.Controls"
        xmlns:neoTrader="clr-namespace:NeoTrader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        <Window.Resources>

   
</Window.Resources>

    <WrapPanel>
    <controls:RToolItem Content="{Binding ToolButtonVm}" Height="24" Width="Auto"/>
    <controls:RToolItem Content="{Binding ContentVm}" Height="24" Width="Auto"/>
    <controls:RToolItem Content="{Binding SeperatorVm}" Height="24" Width="Auto"/>
    <controls:RToolItem Content="{Binding ContentAndGlyphVm}" Height="24" Width="Auto"/>
    <controls:RToolItem Content="{Binding ContentAndGlyphAndStateVm}" Height="24" Width="Auto"/>
    <controls:RToolItem Content="{Binding ContentAndGlyphAndStateAndBadgeVm}" Height="24" Width="Auto"/>
    <ContentPresenter Content="{Binding ToolButtonVm}" Height="20" Width="Auto"/>

    </WrapPanel>
</Window>
