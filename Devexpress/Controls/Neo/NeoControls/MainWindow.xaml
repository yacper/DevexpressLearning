                    <dxb:BarButtonItem x:Name="btnNew" Content="{Binding ContentAndGlyphVm}" GlyphSize="Custom" ShowKeyGesture="True" KeyGesture="{Binding KeyGesture}"/>
                    <dxb:BarSubItem Content="{Binding ToolButtonVm}" GlyphSize="Custom">
